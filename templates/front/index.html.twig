        <!-- SKILLS -->
        <section id="skills">
            <h1>skills</h1>
            <article>
                <ul>
                {% for i in skills %}
                    <li class="ratioSkill" data-percent="{{i.ratio}}">
                        <h6>{{i.name}}</h6>
                        <div></div>
                    </li>
                {% endfor %}




                </ul>


            </article>
        </section>




        <!-- PROJETCS -->
        <div class="trait"></div>
        <section  id="projects">
            <h1>projects</h1>
            <ul id="filters" class="button-group">
            <li>
                    <button class="unativeButton btnT button"  data-filter="*">Show all</button>
            </li>
            {% for i in skills %}
                     <li>
                    <button class="unativeButton btnT button"  data-filter="*.{{i.name}}">{{i.name}}</button>
                </li>


                {% endfor %}
                <p><input type="text" id="quicksearch" placeholder="Search" /></p>
            </ul>

           <article>


                <ul class="ulpro">


                {% for i in projects %}
                  <a class="pro {{i.technos}}" data-category="">
                        <img class=""src="{{i.img}}" alt="photoProject">
                        <p hidden>{{i.technos}}</p>
                    </a>
                {% endfor %}


                </ul>

            </article>
            </article>
        <a id="showmorepro" class="less"><img src="css/img/arrow_down.png" ></a>
