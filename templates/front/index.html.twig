                </p>
            </article>
            <a id="contactmebtn">Contact Me</a>
        </section>
        <div class="trait"></div>

        <!-- SKILLS -->
        <section id="skills">
            <h1>skills</h1>
            <article>
                <ul>
                    {% for i in skills %}
                        <li class="ratioSkill" data-percent="{{ i.ratio }}">
                            {% if  i.ratio > 50  %}
                            <div style=" width: 800px;background: linear-gradient(to right, #0b090a {{ i.ratio }}%, #f0efeb {{ 100 - i.ratio }}%)">{{ i.name }} </div>
                            {% else %}
                                <div style=" width: 800px;background: linear-gradient(to left, #f0efeb {{ 100 - i.ratio }}%, #0b090a {{  i.ratio }}%)">{{ i.name }} </div>
                            {% endif %}
                            <p>{{ i.ratio  }} %</p>
                        </li>
                    {% endfor %}
                </ul>
            </article>
        </section>

        <!-- PROJECTS -->
        <div class="trait"></div>
        <section id="projects">
            <h1>projects</h1>
            <ul id="filters" class="button-group filters-button-group">
                <li>
                    <button id="*" class=" filter_buttons unativeButton btnT button *" data-filter="*">Show all</button>
                </li>
                {% for i in skills %}
                    <li>
                        <button id="{{ i.name }}" class="filter_buttons unativeButton btnT button {{ i.name }}" data-filter="*.{{ i.name }}">{{ i.name }}</button>
                    </li>
                {% endfor %}
            </ul>
            <article>
                <ul class="ulpro">
                    {% for i in projects %}
                        <a  class="cards_pro pro element-item {{ i.skills }}" data-category="">
                            <img class="" src="{{ i.image }}" alt="photoProject">
                            <p hidden> {{ i.name }}</p>
                        </a>
                    {% endfor %}
                </ul>
            </article>
        </section>

        <div class="trait"></div>
        <section id="blog">
            <h1>blog</h1>
            <article>
                {% for i in blogs %}
                    <article>
                        <img src="{{ i.image }}">
                        <div>
                            <h3>{{ i.title }}</h3>
                            <h3>{{ i.date | date("m/d/Y") }}</h3>
                            <p>{{ i.text }}</p>
                        </div>
                    </article>
                {% endfor %}

            </article>
<!----FOOTER--->
        </section>
        <div class="trait"></div>
        <section id="contact">
            <h1>Contact me</h1>
