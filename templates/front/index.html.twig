                <a target="blank" class="imgRs" href="https://twitter.com/bastienaubry"><img src="css/img/Twitter_5.png"
                                                                                             alt="twitter_logo"></a>
                <a target="blank" class="imgRs" href="https://www.instagram.com/?hl=fr"><img
                            src="css/img/Instagram_5.png" alt="instaga_logo"></a>

            </article>
            <p>Made by Bastien AUBRY</p>
            <a target="blank" class="imgRs" id="admin" href="{{ path('backoffice_login') }}"><img src="css/img/edit.png"
                                                                                                  alt="instaga_logo"></a
        </footer>
    </section>
{% endblock %}
