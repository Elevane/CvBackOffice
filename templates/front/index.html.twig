        <div class="trait"></div>
        <section id="blog">
            <h1>blog</h1>
            <article>
             {% for i in blogs %}
                  <article>
                <img src="{{i.image}}">
                <div>
                    <h3>{{i.title}}</h3>
                    <h3>{{i.date | date("m/d/Y")}}</h3>
                <p>{{i.text}}</p>
                </div>
            </article>
                {% endfor %}

